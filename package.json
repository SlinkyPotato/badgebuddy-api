{
  "name": "badge-buddy-api",
  "version": "0.0.3-5",
  "description": "Microservices API for Badge Buddy",
  "author": "SlinkyPotato <patinobrian@gmail.com>",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "20.3.1",
    "pnpm": "8.6.10"
  },
  "engineStrict": true,
  "packageManager": "pnpm@8.6.10",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "clean": "rm -rf dist",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:docker": "docker compose --profile local up --build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "env:push": "dotenv-vault push",
    "env:open": "dotenv-vault open",
    "env:pull": "dotenv-vault pull",
    "publish-docker:staging": "node publish.docker.js staging latest-beta",
    "publish-docker:production": "node publish.docker.js production latest"
  },
  "dependencies": {
    "@discord-nestjs/common": "^5.2.6",
    "@discord-nestjs/core": "^5.3.8",
    "@fastify/static": "^6.10.2",
    "@nestjs/axios": "^3.0.0",
    "@nestjs/cache-manager": "^2.1.0",
    "@nestjs/common": "^10.0.3",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.3",
    "@nestjs/mongoose": "^10.0.0",
    "@nestjs/platform-fastify": "^10.0.4",
    "@nestjs/swagger": "^7.0.6",
    "@nestjs/terminus": "^10.0.1",
    "@solidchain/badge-buddy-common": "^0.0.6-2",
    "axios": "^1.4.0",
    "cache-manager": "^5.2.3",
    "cache-manager-redis-yet": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "discord.js": "^14.12.1",
    "dotenv": "^16.3.1",
    "dotenv-vault": "^1.25.0",
    "joi": "^17.9.2",
    "mongoose": "^7.3.1",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.5",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.3",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
